    <style type="text/css">
    
button {{
  margin: 3px !important;
  padding: 0px !important;
}}

.ui-button-text {{
  font-size: 13px !important;
}}

.ui-dialog-title, .ui-dialog-content * {{
  font-size: 13px;
}}

#momlogo {{
  position:absolute;
  right:40px;
  top:0px;
}}

.xrx-translate-page-link {{
  z-index:9999;
}}

/*
* Button create collection
*/
#dmy-collection-new-button {{
  margin:0px;
  padding:0px;
  background:rgb(211,72,54);
}}

#dmy-collection-new-button .ui-button-text {{
  font-size:13px;
  font-weight:bold;
  color:white;
}}

/*
* Dialog create collection
*/
#dmy-collection-new-dialog button {{
  margin:0px !important;
  padding:0px !important;
}}

#dmy-collection-new-dialog .ui-button-text {{
  font-size:13px !important;
}}

/*
* Collection Tree
*/
#dmy-collection-left-menu {{
  position:relative;
  float:left;
  margin: 1%;
  width: 18%;
}}

#dmy-collections-tree, #dmy-collections-shared {{
  margin-left: 20px;
}}

.dmenu-button {{
  margin-top:5px;
  padding: 5px;
}}

.my-collections-tree-item {{
  margin:5px;
  padding:5px;
}}

.my-collections-tree-item:hover {{
  background:rgb(240,240,240);
  cursor:pointer;
}}

.selected-collections-tree-item {{
  color: rgb(211,72,54);
  font-weight: bold;
}}

/*
* List of Items
*/
#dmy-collection-items-toolbar {{
  position: relative;
  float: left;
  width: 98%;
  margin: 1%;
}}

#dmy-collection-breadcrumb {{
  position: absolute;
  margin-left: 21%;
  top: -1.3em;
}}

#dmy-collection-items {{
  position: relative;
  float: left;
  width: 80%;
  margin-top: 2%;
}}

.my-collection-item {{
  position: relative;
  float: left;
  border-bottom: solid rgb(230,230,230) 1px;
  width: 98%;
  padding: 1%;
}}

.forms-table {{
  width: 100%;
}}

.forms-table-row {{
  width: 100%;
}}

.forms-table-cell {{
  padding: 1%;
  border-bottom: solid rgb(230,230,230) 1px;
}}

.my-collection-item-hover {{
  background: rgb(255,255,214);
}}

.myCollectionItem input {{
  margin-right: 5%;
}}

.my-collection-tree-item-hover {{
  background:rgb(240,240,240);
  cursor:pointer;
}}

.my-collection-item-draggable-helper {{
  font-size: 12px;
  font-weight: bold;
  color: black;
  background: white;
  border: solid 1px grey;
  padding: 5px;
}}

.my-collection-item-dragstart {{
  background: rgb(255,255,214);  
}}

.just-linked * {{
  font-size: 9px !important;
}}

#dinvite-user .iinvite-user {{
  width: 80%;
}}

div.invited-user {{
  position: relative;
  float: left;
  width: 100%;
  display: block;
  border-bottom: solid rgb(240,240,240) 1px;
}}

span.invited-user {{
  position: relative;
  float: left;
  width: 100%;
  display: block;
  margin: 10px;
}}

    </style>
