  <xrx:style>

body {{
  margin:0;
  padding:0;
  width:100%;
  height:100%;
  font-family:"Trebuchet MS", regular, sans-serif;
}}
#momlogo {{
  position:absolute;
  right:40px;
  top:0px;
}}
#dmy-collection {{
  position:relative;
  float:left;
  overflow-x:hidden;
  width:100%;
  height:100%;
}}
#dmy-collection-header {{
  position: relative;
  float: left;
  width: 100%;
  height: 60px;
  margin: 10px;
}}
#autoSaveStatus {{
  color: #F39814;
  position: absolute;
  top: 45px;
  left: 10px;
}}
#dmy-collection-header h2 {{
  font-weight: bold;
  font-size: 30px;
  margin: 10px;
  padding: 0px;
}}
#dmy-collection-toolbar {{
  position:relative;
  float:left;
  display:block;
  width:100%;
  background:rgb(240,240,240);
  //rgba(50, 50, 50, .05);
  border-bottom:solid rgb(200,200,200) 1px;
  border-top:solid rgb(200,200,200) 1px;
}}
/*
* Login
*/
#dlogin {{
  position: relative;
  float: left;
  margin: 20px;
}}
/*
* Forms Mixed Content Elements
*/
.xrx-elements {{
  position:absolute;
  right:0px;
  padding-right:7px;
}}
.xrx-elements .ui-corner-all {{ 
  border:solid grey 1px;
}}
.xrx-elements .ui-menu-item, .xrx-elements .forms-mixedcontent-elements-menu-button {{
  font-size:14px;
  margin:0;
  font-family: Courier, monospace;
  color:black;
}}
.xrx-elements .forms-mixedcontent-elements-menu-button {{
  border:solid grey 1px;
  align:right;
}}
.xrx-elements .ui-menu {{
  width:200px; 
  position:absolute;
  z-index:9999;
  background:white;
  opacity:1;
}}
.xrx-elements .forms-mixedcontent-elements-menu-wrapper {{
  position:relative;
  float:left;
}}

/*
* Forms Mixed Content Attributes
*/
.xrx-attributes {{
  position:relative;
  float:left;
  width:100%;
}}
.forms-mixedcontent-attributes-tagname {{
  font-weight:bold;
  font-size:1.5em;
  margin-bottom:5px;
}}
.forms-mixedcontent-attributes-error {{
  color:red;
}}
.forms-mixedcontent-suggested-attributes {{
  position:relative;
  float:left;
  width:35%;
  padding-right:5%;
}}
.forms-mixedcontent-suggested-attribute {{
  position:relative;
  float:left;
  width:90%;
  border:dashed rgb(200,200,200) 1px;
  background:rgb(230,230,230);
  margin:1px;
  padding:3px;
  cursor:move;
}}
.forms-mixedcontent-edit-attributes {{
  position:relative;
  float:left;
  width:100%;
}}
.forms-mixedcontent-attribute-droppable {{
  position: relative;
  float: left;
  width: 90%;
  border: dashed grey 1px;
  margin: 1px;
  padding: 3px;
  margin-bottom: 20px;
  margin-top: 10px;
}}
.suggested-attribute-draggable-disabled {{
  color: white;
  font-weight: bold;
  background: rgb(240,240,240);
  border: solid white 1px;
}}
.edit-attributes-droppable-active {{
  border: dashed #F39814 1px;
}}
.ui-draggable-dragging {{
  background: #FECA40;
  color: white;
}}
/* 
* neu wegen values 
*/
 .forms-mixedcontent-suggested-values {{
  position:relative;
  float:left;
  width:60%;
}}
/* Ã¼berschreiben von jquery.ui.theme.css */
/*.ui-widget-content,*/
.choose {{
  border:none;
}}





/*
* Forms Mixed Content Tagname
*/
.xrx-tagname {{
  padding-left:7px;
  font-weight:bold;
  font-size:1.6em;
}}

/*
* Forms Message
*/
.xrx-message {{
  position:fixed;
  top:0px;
  left:-200px;
  min-width:180px;
  margin-left:50%;
  z-index:9999;
  padding:10px;
}}

/*
* Forms Table Layout
*/
.forms-table {{
  display:table;
}}
.forms-table-row {{
  display:table-row;
}}
.forms-table-cell {{
  display:table-cell;
}}
  </xrx:style>
</xrx:css>