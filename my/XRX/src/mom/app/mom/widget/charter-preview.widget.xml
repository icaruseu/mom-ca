  <xrx:constructor>
    <xrx:parameter>
      <xrx:name>$constructor:charter</xrx:name>
      <xrx:default>()</xrx:default>
    </xrx:parameter>
    <xrx:parameter>
      <xrx:name>$constructor:all-user-xmls</xrx:name>
      <xrx:default>()</xrx:default>
    </xrx:parameter>
    <xrx:parameter>
      <xrx:name>$constructor:charter-context</xrx:name>
      <xrx:default>''</xrx:default>
    </xrx:parameter>
  </xrx:constructor>
  <xrx:variables>
  <!-- charter info -->
    <xrx:variable>
      <xrx:name>$wcharter-preview:atom-id</xrx:name>
      <xrx:expression>root($constructor:charter)//atom:id/text()</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:idno-element</xrx:name>
      <xrx:expression>$constructor:charter//cei:body/cei:idno</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:idno</xrx:name>
      <xrx:expression>$wcharter-preview:idno-element/text()</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:id</xrx:name>
      <xrx:expression>charter:charterid($wcharter-preview:atom-id)</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:date</xrx:name>
      <xrx:expression>($constructor:charter//cei:date/text()|$constructor:charter//cei:dateRange/text())[1]</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:abstract</xrx:name>
      <xrx:expression>$constructor:charter//cei:abstract//text()</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:num-images</xrx:name>
      <xrx:expression>count($constructor:charter//cei:graphic/@url)</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:num-images</xrx:name>
      <xrx:expression>count($constructor:charter//cei:graphic/@url)</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:charter-url</xrx:name>
      <xrx:expression>concat(conf:param('request-root'), $charter:rarchiveid, '/', $charter:rfondid, '/', xmldb:encode(charter:charterid(root($constructor:charter)//atom:id/text())) , '/charter')</xrx:expression>
    </xrx:variable>
  <!-- status of the charter -->
    <xrx:variable>
      <xrx:name>$wcharter-preview:is-bookmarked</xrx:name>
      <xrx:expression>if($user:is-loggedin = true()) then bookmark:is-bookmarked($xrx:user-xml, $wcharter-preview:atom-id) else false()</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:saved-by-current-user</xrx:name>
      <xrx:expression>if($user:is-loggedin = true()) then publication:is-saved($xrx:user-xml, $wcharter-preview:atom-id) else false()</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:saved-by-any-user</xrx:name>
      <xrx:expression>if($user:is-loggedin = true()) then publication:is-saved($constructor:all-user-xmls, $wcharter-preview:atom-id) else false()</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:saved-by-user</xrx:name>
      <xrx:expression>if($user:is-loggedin = true()) then publication:saved-by-user($constructor:all-user-xmls, $wcharter-preview:atom-id) else ''</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$wcharter-preview:saved-by-user-label</xrx:name>
      <xrx:expression>if($user:is-loggedin = true()) then concat(user:firstname-name($wcharter-preview:saved-by-user), ' (', $wcharter-preview:saved-by-user, ')') else ''</xrx:expression>
    </xrx:variable>
  <!-- user status -->
    <xrx:variable>
      <xrx:name>$wcharter-preview:is-moderator</xrx:name>
      <xrx:expression>
	    if($user:is-loggedin = true()) then auth:matches(
				<xrx:rule>
          <xrx:user/>
          <xrx:role>moderator</xrx:role>
        </xrx:rule>
				) else false()
			</xrx:expression>
    </xrx:variable>
  </xrx:variables>
  <xrx:portal>tag:www.monasterium.net,2011:/mom/portal/empty</xrx:portal>
  <xrx:init>
    <xrx:processor>
      <xrx:xformsflag>true</xrx:xformsflag>
    </xrx:processor>
  </xrx:init>
  <xrx:csss>
    <style type="text/css">
    
#dcharter-preview-main{{
	float:left;
	width:800px;	
}}

#dcharter-preview-main .charter *{{
	line-height:1.6em;
}}

#dcharter-preview-main .charter{{
	position:relative;
	width:100%;
	float:left;
	background:rgb(245,245,245);
}}

#dcharter-preview-main .charter-preview{{
	position:relative;
	float:left;
	width:100%;
	background:rgb(245,245,245);
	border-bottom:solid white 5px;
}}

#dcharter-preview-main .inner-charter-preview{{
	position:relative;
	float:left;
	width:100%;
	margin:15px;
}}

#dcharter-preview-main .charter-info-and-actions{{
	display:inline;
	position:relative;
	float:left;
	width:25%;
	border-left:solid white 3px;
	padding-left:10px;
}}

#dcharter-preview-main .container{{
	float:left;
	width:65%;
	padding-right:10px;
}}

#dcharter-preview-main .charter-info-and-actions *{{
	font-size:13px;
}}

#dcharter-preview-main .fieldset{{
	border:solid #C8C8C8 1px;
	margin-top:10px;
}}

#dcharter-preview-main .inner-fieldset{{
	margin:5px;
}}

div.bookmark-icon{{
	position:absolute;
	right:220px;
}}

.note-field{{
	position:relative;
	border:solid #C8C8C8 1px;
  padding:3px;
}}

.noteBobble {{
	display:none;
	position:fixed;
	left:400px;
	bottom:35%;
	z-index:20;
	width: 400px;
	height: 160px;
	background-color: #F6F6F6;
	padding:20px;
  -moz-border-radius:3px;
  -webkit-border-radius:3px;
  -khtml-border-radius:3px;
  border-radius:3px;
  -moz-box-shadow:  4px -3px 10px 1px #202020;
  -webkit-box-shadow: 4px -3px 10px 1px #202020;
  box-shadow:     4px -3px 10px 1px #202020;
}}

.noteBobble .xfLabel{{ 
	color:rgb(142,163,132);
	font-weight:bold;
}}
 
.noteBobble .xfValue{{ 
	top: 5px !important;
  position:relative;
  width:400px !important;
  max-height: 100px !important;
}}

.noteBobble .xfTrigger{{
	width:30px !important;
}}

.edit-box{{
  padding:3px;
}}
	  </style>
