    <style type="text/css">

#header{{
  position:relative;
  float:left;
  width:100%;
  margin:0px;
  padding:0px;
}}

/*
*
*   Menu
*/
#header .menu{{
  position:relative;
  float:left;
  margin:0px;
  padding-left:10px;
  /*margin-left:15px;*/
}}

#header .inner-menu{{
  padding:0px;
  margin:4px;
}}

#header .menu-item{{
  position:relative;
  float:left;
  margin:0px;
  padding:0px;
}}

#header .menu-item *{{
  text-decoration:none; 
  font-weight:bold;
}}

#header .menu-item a{{
  margin-right:0.5em;
  font-size:1.1em;
}}

#header .menu-item a:link{{
  color:{conf:param('color3')};
}}

#header .menu-item a:hover{{
  cursor:pointer;
  color:{conf:param('color6')};
  text-decoration:none;
}}

#header .stuff{{
  position:relative;
  float:left;
  width:100%;
}}

#header .extras{{
  position:relative;
  float:right;
  right:10px;
  margin:0px;
  padding:3px 0 0 0;
  width:30%;
}}

#logged-in-info{{
  position:absolute;
  left:200px;
  top:0px;
  margin:5px;
  color:grey;
}}

#header form {{
  display:inline;
}}

#dregister-link, #dlogin-link{{
  position:relative;
  float:right;
  padding:2px;
}}


ul.navi {{
    background:none !important;
  
}}
ul.navi {{
   
    margin-top: -0.3%;
    padding:0 2px;
    list-style-type:none;  

}}


li.facet {{
          position:absolute;
          width: 150px;
          box-shadow: 3px 3px 5px #888888;
          padding-top: 0.5em;
}}


#lang-select-form {{
     text-align:right;
}}
form {{
      padding-left:1em;
}}


form span.lang {{
        font-size:0.8em;       
        margin-right:2%;


}}

.menu {{
     
      margin:0 !important;
}}
.inner-menu {{
      width:100%;
}}

 #navigation {{
   postion:absolute;
   height:4em;
   
   }}
      </style>
