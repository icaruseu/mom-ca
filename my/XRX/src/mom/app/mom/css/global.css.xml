	<xrx:style>

/* 
*
*   Page 
*/    
html{{
 height:100%;
 margin:0px;
 padding:0px;
}}
html *, .bf *{{
  font-family:"Trebuchet MS", regular, sans-serif;
  font-size:16px;
}}
#main-logo{{
  height:103px;
}}
#debug-pane{{
  display:none;
}}
body, #formWrapper{{
  height: 101%; /*FF vert. Scrollbar erzwingen ## */
  color:#1a1a1a;
  background-color:{conf:param('color1')};
  margin:0px;
  padding:0px;
}}
#main{{
  position:absolute;
  left:-500px;
  width:1000px;
  background-color:white;
  margin:0px;
  padding:0px;
  margin-left:50%;
}}
#content{{
  position:relative;
  float:left;
  min-height:500px;
  padding-bottom: 20px;
  width:100%;
}}
#inner-content{{
  margin:20px;
}}
#dresponse-info-div .icon img{{
  width:32px;
}}

/* 
*
*   Headings 
*/
.h2, .h2 span{{  
  color:{conf:param('color6')};  
  font-size:24px;
  font-weight:bold;
  padding-bottom:1.2em;
}}

/*
*
* Lists
*
*/
ul.nostyle{{
  list-style:none;
  line-height:1.5em;
  margin-left:-40px;
}}

/* 
*
*   Links 
*/
a{{
  color:{conf:param('color2')} !important;
}}
a:hover{{
  color:{conf:param('color6')} !important;
}}

/*
*
* Function links
*
*/
.my-functions {{  
  position:relative;
  float:right;
  margin-bottom:30px;
  width:32.5%;
  clear:right;
  
}}

.my-functions a {{
  color:#EF6A2F !important;
}}

.my-functions-label {{
  text-align:right;
  color:#EF6A2F !important;
  font-weight:bold;
  font-size:1em;
}}

.my-functions h3{{
  text-align:right;
  color:#EF6A2F !important;
}}

.function-links{{
  
  background-color:{conf:param('color7')} !important;
  min-height:30px;
  padding: 5px;
  
}}

.function-link{{
 
  margin:10px;
}}

/*
*
* Pagination navi
*
*/
.dpagination-navi{{
  position:relative;
  float:none;
  width:100%;
}}
.dnavigation-item{{
  position:relative;
  float:left;
}}

/*
*
* XRX
*
*/
.xrx-translate-page-link {{
	display:block!important;
	position:absolute!important;
	right:0px!important;
	background:#FFE3D9!important;
}}

.xrx-translate-page-link a {{
	display:block!important;
	color:#EF6A2F!important;
	margin:10px!important;
}}

/*
*
* betterFORM
*
*/
#betterformMessageToaster {{
	width:100% !important;
}}
#betterformMessageToaster div{{
  width: 100% !important;
  line-height: 3em !important;
  background: #EF6A2F;
  color: white;
  font-weight: bold;
  text-align: center;
  font-size: 1.2em;
}}

/* 
*
*   Hacks 
*/
img{{
  border:0;
}}

/*
*
*   Transcription
*/

.cei-persname,
.cei-placename {{
    border-bottom:1px dotted #72856C;
}}

.cei-corr, .cei-supplied, .cei-unclear, .cei-sic {{
  background-color:#eaeaea;
  cursor:help;
}}

.cei-del {{
  text-decoration:line-through;
}}

.cei-c {{
  text-decoration:underline;
}}

.cei-expan::before{{
  content:"(";
  color:grey;
  background-color:#f2f2f2;
}}
.cei-expan::after{{
  content:")";
  color:grey;
  background-color:#f2f2f2;
}}
